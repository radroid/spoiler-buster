{
    "manifest_version": 2,
    "name": "spoiler-buster",
    "description": "This is a simple extension which blocks spoilers from a website",
    "version": "0.0.1",
    "author": "Ramasubramanian D",
    "browser_action": {
        "default_icon": "logo.png",
        "default_title": "spoiler buster"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./js/content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab" 
    ]
}